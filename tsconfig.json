{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "types": ["reflect-metadata"],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
